<div class="container">
  <h1> Sửa khoá học</h1>
  <form method="POST" action="/course/{{courese._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khoá học</label>
      <input
        type="text"
        class="form-control"
        value="{{courese.name}}"
        id="exampleInputPassword1"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Mô tả khoá học</label>
      <textarea
        class="form-control"
        id="exampleInputPassword1"
        name="description"
      >{{courese.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoId">VideoId</label>
      <input
        type="text"
        class="form-control"
        value="{{courese.videoId}}"
        id="exampleInputPassword1"
        name="videoId"
      />
    </div>
    <div class="form-group">
      <label for="level">Level</label>
      <input
        type="text"
        class="form-control"
        value="{{courese.courese}}"
        id="exampleInputPassword1"
        name="level"
      />
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>